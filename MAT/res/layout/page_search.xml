<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/search"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/RelativeLayout2"
        android:layout_alignRight="@+id/RelativeLayout2"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/search_icon2" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/search_byName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:checked="true"
                android:nextFocusDown="@+id/mat_search_key"
                android:text="@string/byName" />

            <RadioButton
                android:id="@+id/search_byDirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:nextFocusDown="@+id/mat_search_key"
                android:text="@string/byDirector" />

            <RadioButton
                android:id="@+id/search_byActors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:nextFocusDown="@+id/mat_search_key"
                android:text="@string/byActors" />

            <RadioButton
                android:id="@+id/search_byType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:nextFocusDown="@+id/mat_search_key"
                android:text="@string/byType" />

            <RadioButton
                android:id="@+id/search_byArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:nextFocusDown="@+id/mat_search_key"
                android:text="@string/byArea" />

            <RadioButton
                android:id="@+id/search_byYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:nextFocusDown="@+id/mat_search_key"
                android:text="@string/byYear" />
        </RadioGroup>

        <Button
            android:id="@+id/mat_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back"
            android:layout_marginRight="10dip"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="800dip"
        android:layout_height="78dip"
        android:layout_below="@+id/RelativeLayout"
        android:layout_centerHorizontal="true" >

        <EditText
            android:id="@+id/mat_search_key"
            android:layout_width="500dip"
            android:layout_height="62dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mat_search_search"
            android:background="@drawable/search"
            android:hint="@string/pleaseinputkey"
            android:paddingLeft="67dip"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:scaleType="fitXY"
            android:src="@drawable/search_icon" />

        <Button
            android:id="@+id/mat_search_clean"
            android:layout_width="130dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/search_button"
            android:text="@string/search_clean"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/mat_search_search"
            android:layout_width="130dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mat_search_clean"
            android:background="@drawable/search_button"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>