<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/subRelativeLayout_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/page_item_detail_main_left_top"
            android:layout_width="70dip"
            android:layout_height="90dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/page_item_detail_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subRelativeLayout_01_right_filmName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/subRelativeLayout_01" >

        <TextView
            android:id="@+id/page_item_detail_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subRelativeLayout_01_right_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/subRelativeLayout_01"
        android:layout_below="@+id/subRelativeLayout_01_right_filmName" >

        <LinearLayout
            android:id="@+id/page_item_detail_main_right_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/page_item_detail_main_left_top"
            android:layout_weight="4"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/page_item_detail_main_right_top_ue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/page_item_detail_main_right_top_ue_socres"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_text"
                        android:text="  评分 ："
                        android:gravity="center_horizontal"
                        android:textColor="#80afffff" />

                    <TextView
                        android:id="@+id/page_item_detail_socres"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="bottom|left"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/page_item_detail_main_right_top_ue_length"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_text"
                        android:text="  时长 ："
                        android:gravity="center_horizontal"
                        android:textColor="#80afffff" />

                    <TextView
                        android:id="@+id/page_item_detail_length"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="bottom|left"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/page_item_detail_main_right_top_ue_year"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_text"
                        android:text="  年代 ："
                        android:gravity="center_horizontal"
                        android:textColor="#80afffff" />

                    <TextView
                        android:id="@+id/page_item_detail_year"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="bottom|left"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#ffffffff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/page_item_detail_main_right_top_sita"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/page_item_detail_main_right_top_sita_directors"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/bg_text"
                        android:text="  导演 ："
                        android:gravity="center_horizontal"
                        android:textColor="#80afffff" />

                    <TextView
                        android:id="@+id/page_item_detail_directors"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/page_item_detail_main_right_top_ue_artists"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/bg_text"
                        android:text="  演员 ："
                        android:gravity="center_horizontal"
                        android:textColor="#80afffff" />

                    <TextView
                        android:id="@+id/page_item_detail_artists"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#ffffffff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subRelativeLayout_01_right_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subRelativeLayout_01_right_top"
        android:layout_toRightOf="@+id/subRelativeLayout_01" >

        <LinearLayout
            android:id="@+id/page_item_detail_main_left_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dip"
            android:layout_weight="2"
            android:gravity="top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/page_item_detail_description"
                android:layout_width="fill_parent"
                android:layout_height="70dip"
                android:ellipsize="end"
                android:focusable="false"
                android:textColor="#66FF33" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subRelativeLayout_02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subRelativeLayout_01_right_bottom" >

        <LinearLayout
            android:id="@+id/page_item_detail_main_right_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="30dip"
            android:paddingRight="30dip" >

            <GridView
                android:id="@+id/page_item_detail_episode"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:horizontalSpacing="30dip"
                android:numColumns="4"
                android:padding="10dip"
                android:verticalSpacing="15dip" >
            </GridView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>