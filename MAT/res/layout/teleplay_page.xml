<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color" >

    <ImageView
        android:id="@+id/field_pic"
        android:layout_width="297dip"
        android:layout_height="426dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="46dip"
        android:layout_marginTop="60dip"
        android:background="@drawable/ring_box"
        android:paddingBottom="12dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="10dip"
        android:scaleType="fitXY"
        android:src="@drawable/film_bg_loading" >
    </ImageView>

    <View
        android:layout_width="348dip"
        android:layout_height="43dip"
        android:layout_alignLeft="@+id/field_pic"
        android:layout_below="@+id/field_pic"
        android:layout_marginLeft="-26dip"
        android:layout_marginTop="-10dip"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="27dip"
        android:layout_toRightOf="@+id/field_pic"
        android:background="#80000000" >

        <ProgressBar
            android:id="@+id/content_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dip"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/filmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dip"
           	android:textSize="28sp"
           	android:textColor="@color/white"
            android:text="电影名称" />
        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/filmName"
            android:layout_marginTop="20dip"
           	android:textSize="24sp"
            android:text="主演:" />
        <TextView
            android:id="@+id/actors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview"
            android:layout_alignTop="@+id/textview"
           	android:textSize="24sp"
           	android:textColor="@color/white"
            android:text="xxxx" />
        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textview"
            android:layout_marginTop="20dip"
           	android:textSize="24sp"
            android:text="简介:" />
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview1"
            android:layout_alignTop="@+id/textview1"
           	android:textSize="24sp"
           	android:textColor="@color/white"
            android:text="xxxx" />
        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textview1"
            android:layout_marginTop="20dip"
           	android:textSize="24sp"
            android:text="剧集:" />
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview2"
            android:layout_alignTop="@+id/textview2"
           	android:textSize="24sp"
           	android:textColor="@color/white"
            android:text="更新至15集/共36集" />

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#88cecece" />

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/line1"
            android:numColumns="6" 
            >
        </GridView>

    </RelativeLayout>

</RelativeLayout>