<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/level"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/byPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="热播" />

    <Button
        android:id="@+id/byScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/byPlay"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/byPlay"
        android:text="好评" />

    <Button
        android:id="@+id/byComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/byPlay"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/byScore"
        android:text="热议" />

    <Button
        android:id="@+id/byRecent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/byPlay"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/byComment"
        android:text="最近" />

    <Button
        android:id="@+id/byCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="分类" />

</RelativeLayout>