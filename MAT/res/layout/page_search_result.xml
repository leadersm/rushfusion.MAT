<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color" >

    <View
        android:id="@+id/arrow_left_film_class"
        android:layout_width="26dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/arrow_left_film_class_disable" />

    <RelativeLayout
        android:id="@+id/items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="-10dip"
        android:layout_toRightOf="@+id/arrow_left_film_class" >

        <include
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/page_film_class_item" />

        <include
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item1"
            layout="@layout/page_film_class_item"
            android:nextFocusRight="@+id/item3" />

        <include
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item2"
            layout="@layout/page_film_class_item"
            android:nextFocusRight="@+id/item4" />

        <include
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item3"
            layout="@layout/page_film_class_item"
            android:nextFocusDown="@+id/item5"
            android:nextFocusRight="@+id/item5" />

        <include
            android:id="@+id/item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item1"
            android:layout_marginTop="-30dip"
            layout="@layout/page_film_class_item"
            android:nextFocusRight="@+id/item6" />

        <include
            android:id="@+id/item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item5"
            android:layout_toRightOf="@+id/item5"
            layout="@layout/page_film_class_item" />

        <include
            android:id="@+id/item7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item5"
            android:layout_toRightOf="@+id/item6"
            layout="@layout/page_film_class_item" />

        <include
            android:id="@+id/item8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item5"
            android:layout_toRightOf="@+id/item7"
            layout="@layout/page_film_class_item" />
    </RelativeLayout>

    <View
        android:id="@+id/arrow_right_film_class"
        android:layout_width="26dip"
        android:layout_height="50dip"
        android:layout_alignBottom="@+id/items"
        android:layout_marginBottom="45dip"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@+id/items"
        android:background="@drawable/arrow_right_film_class_enable" />

</RelativeLayout>
